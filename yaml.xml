<?xml version="1.0"?>
<!DOCTYPE MODE SYSTEM "xmode.dtd">
<MODE>
	<PROPS>
		<PROPERTY NAME="indentNextLines" VALUE="\s*([^\s]+\s*:|-)\s*$"/>
    	<PROPERTY NAME="noTabs" VALUE="true" />
    	<PROPERTY NAME="tabSize" VALUE="2" />
    	<PROPERTY NAME="indentSize" VALUE="2" />
	</PROPS>
	<RULES IGNORE_CASE="TRUE">
		<SEQ_REGEXP AT_LINE_START="TRUE" TYPE="COMMENT1">\s*#.*$</SEQ_REGEXP>
		
		<SEQ TYPE="LABEL">---</SEQ>
		<SEQ TYPE="LABEL">...</SEQ>
		
		<SEQ TYPE="OPERATOR">]</SEQ>
		<SEQ TYPE="OPERATOR">[</SEQ>
		<SEQ TYPE="OPERATOR">{</SEQ>
		<SEQ TYPE="OPERATOR">}</SEQ>
		<SEQ TYPE="OPERATOR">-</SEQ>
		<SEQ TYPE="OPERATOR">+</SEQ>
		<SEQ TYPE="OPERATOR">|</SEQ>
		<SEQ TYPE="OPERATOR">&gt;</SEQ>
		
		<!--<MARK_PREVIOUS TYPE="KEYWORD1" AT_WHITESPACE_END="FALSE">:</MARK_PREVIOUS>-->
		<MARK_FOLLOWING TYPE="KEYWORD2">&amp;</MARK_FOLLOWING>
		<MARK_FOLLOWING TYPE="KEYWORD2">*</MARK_FOLLOWING>
		
		<SEQ_REGEXP AT_LINE_START="TRUE" TYPE="KEYWORD1">\s*(-|)?\s*[^\s]+\s*:(\s|$)</SEQ_REGEXP>
		
		<SEQ_REGEXP TYPE="LITERAL2">\s+~\s*$</SEQ_REGEXP>
		<SEQ_REGEXP TYPE="LITERAL2">\s+null\s*$</SEQ_REGEXP>
		<SEQ_REGEXP TYPE="LITERAL2">\s+true\s*$</SEQ_REGEXP>
		<SEQ_REGEXP TYPE="LITERAL2">\s+false\s*$</SEQ_REGEXP>
		<SEQ_REGEXP TYPE="LITERAL2">\s+yes\s*$</SEQ_REGEXP>
		<SEQ_REGEXP TYPE="LITERAL2">\s+no\s*$</SEQ_REGEXP>
		<SEQ_REGEXP TYPE="LITERAL2">\s+on\s*$</SEQ_REGEXP>
		<SEQ_REGEXP TYPE="LITERAL2">\s+off\s*$</SEQ_REGEXP>
		
		<SEQ_REGEXP TYPE="KEYWORD2">!!(map|seq|str|set|omap|binary)</SEQ_REGEXP>
		
		<SEQ_REGEXP TYPE="KEYWORD3">!![^\s]+</SEQ_REGEXP>
		<SEQ_REGEXP TYPE="KEYWORD4">![^\s]+</SEQ_REGEXP>
	</RULES>
</MODE>
